generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ACL SYSTEM (RBAC) ---

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String
  
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  description String?
  users       User[]
  permissions Permission[] 

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Permission {
  id          String   @id @default(uuid())
  action      String   @unique 
  description String?
  roles       Role[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- DATA MODULES ---

enum StudentStatus {
  ACTIVE            // Santri Aktif Belajar
  MUTAKHORIJIN      // Lulus Akademik, tapi belum Boyong (Baru)
  ALUMNI_GRADUATED  // Sudah Boyong (Lulusan)
  ALUMNI_DROPOUT    // Sudah Boyong (Berhenti Tengah Jalan)
}

model Student {
  id              String   @id @default(uuid())
  nis             String   @unique
  sigapId         String? 
  name            String
  activeDormitory String  
  dormitoryRoom   String? 
  formalClass     String?
  placeOfBirth    String? 
  dateOfBirth     String? 
  address         String? 
  parentPhone     String?
  fatherName      String?
  motherName      String?
  
  photo           String?       
  status          StudentStatus @default(ACTIVE)
  graduationYear  Int?          
  entryYear       Int           
  mutakhorijinBatch Int?
  
  achievements    Achievement[] 
  works           Work[]        

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  ledOrganizations Organization[]
}

enum OrgCategory {
  KEILMUAN
  KESENIAN
}

// 2. BUAT MODEL STAFF (PENGURUS) - Sederhana dulu
model Staff {
  id        String   @id @default(uuid())
  name      String
  position  String   // Jabatan di struktur kepengurusan asrama (bukan organisasi santri)
  photo     String?
  
  // Relasi: Satu pengurus bisa membimbing banyak organisasi
  mentoredOrgs Organization[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// 3. UPDATE MODEL ORGANISASI
model Organization {
  id          String      @id @default(uuid())
  name        String   
  description String   
  logo        String?  
  order       Int         @default(0)
  
  // Field Baru
  category    OrgCategory @default(KEILMUAN)
  
  // Relasi Ketua (Dari Santri)
  leaderId    String?     
  leader      Student?    @relation(fields: [leaderId], references: [id])

  // Relasi Pembimbing (Dari Pengurus)
  advisorId   String?
  advisor     Staff?      @relation(fields: [advisorId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Leader {
  id          String   @id @default(uuid())
  name        String
  periodStart Int      
  periodEnd   Int?     
  photo       String?  
  bio         String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String   
  thumbnail   String?  
  type        String   
  published   Boolean  @default(false)
  authorId    String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Gallery {
  id          String   @id @default(uuid())
  title       String   
  description String?
  date        DateTime @default(now())
  items       GalleryItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GalleryItem {
  id          String   @id @default(uuid())
  galleryId   String
  gallery     Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  type        String   
  url         String   
  createdAt   DateTime @default(now())
}

model Achievement {
  id          String   @id @default(uuid())
  studentId   String?
  student     Student?  @relation(fields: [studentId], references: [id])
  title       String   
  level       String   
  year        Int
  photo       String?  
  createdAt   DateTime @default(now())
}

model Work {
  id          String   @id @default(uuid())
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  title       String
  type        String   
  fileUrl     String?  
  createdAt   DateTime @default(now())
}

model DailySchedule {
  id        String   @id @default(uuid())
  startTime String   // Contoh: "03:30"
  endTime   String   // Contoh: "04:30"
  activity  String   // Contoh: "Qiyamul Lail"
  createdAt DateTime @default(now())
}