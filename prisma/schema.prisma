generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ACL SYSTEM (RBAC) ---

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String
  
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String       @id @default(uuid())
  name        String       @unique
  description String?
  users       User[]
  permissions Permission[] 

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Permission {
  id          String   @id @default(uuid())
  action      String   @unique 
  description String?
  roles       Role[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- DATA MODULES ---

enum StudentStatus {
  ACTIVE            // Santri Aktif Belajar
  MUTAKHORIJIN      // Lulus Akademik, tapi belum Boyong (Baru)
  ALUMNI_GRADUATED  // Sudah Boyong (Lulusan)
  ALUMNI_DROPOUT    // Sudah Boyong (Berhenti Tengah Jalan)
}

model Student {
  id              String   @id @default(uuid())
  nis             String   @unique
  sigapId         String? 
  name            String
  activeDormitory String  
  dormitoryRoom   String? 
  formalClass     String?
  placeOfBirth    String? 
  dateOfBirth     String? 
  address         String? 
  parentPhone     String?
  fatherName      String?
  motherName      String?
  
  photo           String?       
  status          StudentStatus @default(ACTIVE)
  graduationYear  Int?          
  entryYear       Int           
  mutakhorijinBatch Int?
  
  achievements    Achievement[] 
  works           Work[]        
  staffPositions  Staff[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  ledOrgPeriods   OrgPeriod[]
}

enum OrgCategory {
  KEILMUAN
  KESENIAN
}

// 2. BUAT MODEL STAFF (PENGURUS) - Sederhana dulu
model Staff {
  id        String   @id @default(uuid())
  
  // Relasi ke Mutakhorijin (Lulusan)
  // Jika diambil dari database santri
  studentId String?
  student   Student? @relation(fields: [studentId], references: [id], onDelete: SetNull)

  // Nama Manual (Jika orang luar/bukan data santri)
  name      String?  

  position  String   // Misal: "Lurah Asrama", "Bagian Keamanan"
  
  // --- FIELD BARU UNTUK RIWAYAT ---
  periodStart Int    @default(2025)
  periodEnd   Int?   // Tahun Selesai (Misal: 2024). Jika null, berarti masih aktif.
  isActive    Boolean @default(true) // Penanda visual saja
  // --------------------------------

  photo     String?  
  order     Int      @default(0) 

  // Relasi: Staff ini bisa jadi Pembimbing di banyak Organisasi
  mentoredOrgs OrgPeriod[] 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- MODEL ORGANISASI (INDUK) ---
model Organization {
  id          String      @id @default(uuid())
  name        String      // Nama Organisasi (Misal: "IPMA", "Hadroh")
  description String    
  logo        String?   
  category    OrgCategory @default(KEILMUAN)
  order       Int         @default(0)
  
  // Relasi ke Riwayat Kepengurusan
  history     OrgPeriod[] 

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- TABEL BARU: RIWAYAT ORGANISASI PER TAHUN ---
model OrgPeriod {
  id              String       @id @default(uuid())
  
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // TAHUN PERIODE
  periodStart     Int          // Misal: 2024
  periodEnd       Int?         // Misal: 2025

  // STRUKTUR PADA TAHUN TERSEBUT
  // 1. Ketua (Dari Santri Aktif)
  leaderId        String?
  leader          Student?     @relation(fields: [leaderId], references: [id])

  // 2. Pembimbing (Dari Pengurus/Staff)
  advisorId       String?
  advisor         Staff?       @relation(fields: [advisorId], references: [id])
  
  isActive        Boolean      @default(true)

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  // Agar cepat saat filter "Tampilkan Organisasi Tahun 2024"
  @@index([periodStart])
}

model Leader {
  id          String   @id @default(uuid())
  name        String
  periodStart Int      
  periodEnd   Int?     
  photo       String?  
  bio         String   
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String   @id @default(uuid())
  title       String
  slug        String   @unique
  content     String   
  thumbnail   String?  
  type        String   
  published   Boolean  @default(false)
  authorId    String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Gallery {
  id          String   @id @default(uuid())
  title       String   
  description String?
  date        DateTime @default(now())
  items       GalleryItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model GalleryItem {
  id          String   @id @default(uuid())
  galleryId   String
  gallery     Gallery  @relation(fields: [galleryId], references: [id], onDelete: Cascade)
  type        String   
  url         String   
  createdAt   DateTime @default(now())
}

model Achievement {
  id          String   @id @default(uuid())
  studentId   String?
  student     Student?  @relation(fields: [studentId], references: [id])
  title       String   
  level       String   
  year        Int
  photo       String?  
  createdAt   DateTime @default(now())
}

model Work {
  id          String   @id @default(uuid())
  studentId   String
  student     Student  @relation(fields: [studentId], references: [id])
  title       String
  type        String   
  fileUrl     String?  
  createdAt   DateTime @default(now())
}

model DailySchedule {
  id        String   @id @default(uuid())
  startTime String   // Contoh: "03:30"
  endTime   String   // Contoh: "04:30"
  activity  String   // Contoh: "Qiyamul Lail"
  createdAt DateTime @default(now())
}

model Karya {
  id          String   @id @default(uuid())
  title       String   // Nama Kitab
  author      String   // Penyusun (Bisa nama santri atau Tim)
  year        Int      // Tahun Terbit
  description String?  @db.Text // Deskripsi (Text panjang)
  image       String?  // URL Foto Kitab
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}